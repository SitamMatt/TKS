{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "title": "User",
    "type": "object",
    "properties": {
        "login": {
            "type": "string"
        },
        "role": {
            "type": "string",
            "enum": [
                "CLIENT",
                "ADMIN",
                "WORKER"
            ]
        },
        "active": {
            "type": "boolean"
        },
        "firstname": {
            "type": "string"
        },
        "lastname": {
            "type": "string"
        },
        "guid": {
            "type": "string",
            "format": "uuid"
        }
    },
    "required": [
        "guid",
        "login",
        "role",
        "active"
    ]
}